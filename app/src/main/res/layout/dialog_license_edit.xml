<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_backgroud"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:id="@+id/tv_dialog_license_edit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="License name:"
            android:textColor="?colorOnSecondary"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_dialog_license_edit_license_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_custom_selector"
            android:inputType="text"
            android:hint="License name"
            android:textColorHint="?colorSecondaryVariant"
            android:textColor="?colorOnSecondary"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Scan or type device ID"
            android:textColor="?colorOnSecondary"
            android:textSize="12sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

                <EditText
                    android:id="@+id/et_dialog_license_edit_device_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/edittext_custom_selector"
                    android:inputType="text"
                    android:hint="Device Id"
                    android:textColorHint="?colorSecondaryVariant"
                    android:textColor="?colorOnSecondary"
                    android:textSize="22sp"/>

                <ImageButton
                    android:id="@+id/ib_dialog_license_edit_qr_scan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_qr_scan"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/b_dialog_license_edit_dismiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:text="Cancel"
                    android:textColor="?colorOnSecondary"
                    android:backgroundTint="?colorOnPrimary"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/b_dialog_license_edit_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Confirm"
                    android:textColor="?colorPrimary"
                    android:backgroundTint="?colorOnPrimary"
                    android:textSize="16sp" />

        </LinearLayout>



</LinearLayout>