<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="600dp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_backgroud"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:id="@+id/tv_dialog_user_edit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorPrimary"
            android:textSize="16sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User name:"
            android:textColor="?colorOnSecondary"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_dialog_user_edit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_custom_selector"
            android:inputType="text"
            android:hint="user name"
            android:textColorHint="?colorSecondaryVariant"
            android:textColor="?colorOnSecondary"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="User PinCode"
            android:textColor="?colorOnSecondary"
            android:textSize="12sp"/>


        <EditText
            android:id="@+id/et_dialog_user_edit_pin_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_custom_selector"
            android:inputType="text"
            android:hint="pincode"
            android:textColorHint="?colorSecondaryVariant"
            android:textColor="?colorOnSecondary"
            android:textSize="20sp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

                <Button
                    android:id="@+id/b_dialog_user_edit_dismiss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="10dp"
                    android:text="Cancel"
                    android:textColor="?colorOnSecondary"
                    android:backgroundTint="?colorOnPrimary"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/b_dialog_user_edit_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="Confirm"
                    android:textColor="?colorPrimary"
                    android:backgroundTint="?colorOnPrimary"
                    android:textSize="16sp" />

        </LinearLayout>



</LinearLayout>